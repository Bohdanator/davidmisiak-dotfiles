{
    // GENERAL
    "telemetry.telemetryLevel": "off",
    "workbench.colorTheme": "Default Dark Modern",
    "window.menuBarVisibility": "toggle",
    "window.titleBarStyle": "native",
    "extensions.ignoreRecommendations": false,
    "terminal.integrated.allowChords": false,  // pass e.g. Ctrl+K to the terminal
    "terminal.integrated.scrollback": 30000,

    // EDITING
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "diffEditor.ignoreTrimWhitespace": false,
    "editor.emptySelectionClipboard": false,
    "editor.acceptSuggestionOnEnter": "off",
    "editor.inlineSuggest.enabled": true,

    // EDITOR APPEARANCE
    "editor.scrollBeyondLastLine": false,
    "editor.wordWrap": "on",
    "editor.cursorSmoothCaretAnimation": "on",
    "editor.cursorBlinking": "smooth",
    // "editor.fontFamily": "'FiraCode Nerd Font', 'Fira Code', 'Noto Mono', Consolas, monospace",
    "editor.fontFamily": "MonaspiceNe Nerd Font",
    // "editor.fontLigatures": true,
    "editor.fontLigatures": "'calt', 'liga', 'dlig', 'ss01', 'ss02', 'ss03', 'ss04', 'ss05', 'ss06', 'ss07', 'ss08'",
    "disableLigatures.mode": "Cursor",
    "editor.renderWhitespace": "all",
    "editor.minimap.showSlider": "always",
    "editor.minimap.renderCharacters": false,
    "editor.minimap.enabled": false,
    "breadcrumbs.enabled": true,
    "editor.rulers": [100],
    "workbench.editor.wrapTabs": true,
    "workbench.editor.decorations.colors": true,
    "workbench.editor.empty.hint": "hidden",
    "workbench.startupEditor": "none",

    // TERMINAL APPEARANCE
    "terminal.integrated.cursorStyle": "block",
    "terminal.integrated.cursorBlinking": false,
    "terminal.integrated.enableVisualBell": true,
    "accessibility.signals.terminalBell": {
        "sound": "on"
    },
    // "terminal.integrated.fontFamily": "'FiraCode Nerd Font', 'Fira Code', 'Noto Mono', Consolas, monospace",
    "terminal.integrated.fontFamily": "MonaspiceNe Nerd Font",
    // TODO
    "workbench.colorCustomizations": {
        "terminal.ansiBlack":   "#2E3436",  "terminal.ansiBrightBlack":   "#555753",
        "terminal.ansiRed":     "#CC0000",  "terminal.ansiBrightRed":     "#EF2929",
        "terminal.ansiGreen":   "#4E9A06",  "terminal.ansiBrightGreen":   "#8AE234",
        "terminal.ansiYellow":  "#C4A000",  "terminal.ansiBrightYellow":  "#FCE94F",
        "terminal.ansiBlue":    "#3465A4",  "terminal.ansiBrightBlue":    "#729FCF",
        "terminal.ansiMagenta": "#75507B",  "terminal.ansiBrightMagenta": "#AD7fA8",
        "terminal.ansiCyan":    "#06989A",  "terminal.ansiBrightCyan":    "#34E2E2",
        "terminal.ansiWhite":   "#D3D7CF",  "terminal.ansiBrightWhite":   "#EEEEEC",
    },
    "terminal.integrated.minimumContrastRatio": 1,
    "terminal.integrated.enableMultiLinePasteWarning": "never",
    "terminal.integrated.commandsToSkipShell": [
        "github.copilot.terminal.suggestCommand",
        "language-julia.interrupt"
    ],

    // EXPLORER APPEARANCE
    "workbench.iconTheme": "material-icon-theme",
    "workbench.tree.renderIndentGuides": "always",
    "workbench.tree.indent": 16,
    "explorer.autoReveal": false,
    "explorer.compactFolders": false,

    // CODE RUNNER
    "code-runner.fileDirectoryAsCwd": true,
    "code-runner.runInTerminal": true,
    "code-runner.saveFileBeforeRun": true,
    "code-runner.saveAllFilesBeforeRun": true,
    "code-runner.ignoreSelection": true,
    "code-runner.enableAppInsights": false,

    // SPELLING
    "spellright.configurationScope": "user",
    "spellright.notificationClass": "information",
    "spellright.language": [],
    "spellright.documentTypes": [],
    "grammarly.config.documentDomain": "academic",

    // GIT
    "scm.repositories.sortOrder": "path",
    "git.confirmSync": false,
    "git.enableSmartCommit": true,
    "gitlens.codeLens.scopes": ["document"],
    "gitlens.menus": { "editorGroup": false },
    "gitlab.showPipelineUpdateNotifications": true,
    "github.gitProtocol": "ssh",
    "githubPullRequests.pullBranch": "never",

    // LATEX
    "latex-workshop.view.pdf.viewer": "tab",
    "latex-workshop.latex.autoClean.run": "onBuilt",
    "latex-workshop.view.pdf.color.dark.backgroundColor": "#1e1e1e",

    // LIVESHARE
    "liveshare.connectionMode": "relay",
    "liveshare.featureSet": "stable",
    "liveshare.showInStatusBar": "whileCollaborating",

    // PYTHON
    "python.terminal.executeInFileDir": true,
    "jupyter.widgetScriptSources": [
        "jsdelivr.com",
        "unpkg.com"
    ],
    "jupyter.askForKernelRestart": false,

    // JAVA
    "java.project.referencedLibraries": [
        "lib/**/*.jar",
        "/usr/lib/jvm/java-11-openjdk/lib/fx/*.jar",
        "C:\\Program Files\\Java\\javafx-sdk-11.0.2\\lib\\*.jar",
    ],

    // C++
    "C_Cpp.default.cppStandard": "c++20",
    "C_Cpp.default.includePath": [
        "/usr/include/lpsolve/",
    ],

    // RUST
    "rust-analyzer.inlayHints.parameterHints.enable": false,
    "rust-analyzer.inlayHints.typeHints.enable": false,
    "rust-analyzer.inlayHints.chainingHints.enable": false,
    "rust-analyzer.inlayHints.closingBraceHints.enable": false,

    // JULIA
    "julia.symbolCacheDownload": true,
    "julia.enableTelemetry": false,

    // JS
    "[vue]": {
        "editor.defaultFormatter": "octref.vetur"
    },
    "[javascript]": {
        "editor.defaultFormatter": "dbaeumer.vscode-eslint"
    },

    // JSON
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },

    // HEXEDITOR
    "hexeditor.columnWidth": 32,
    "hexeditor.showDecodedText": true,
    "hexeditor.defaultEndianness": "little",
    "hexeditor.inspectorType": "aside",

    // TASKS
    "task.problemMatchers.neverPrompt": {
        "shell": true
    },

    // LINE COUNTER
    "LineCount.excludes": [
        "**/.vscode/**", "**/dist/**", "**/node_modules/**", "**/migrations/**",
        "**/*.lock", "**/*.csv", "**/*.svg",
        "**/tests/**",
    ],
    "LineCount.showStatusBarItem": false,
    "LineCount.output": { "txt": true, "json": false, "csv": false, "md": false, "outdir": "." },

    // ERROR LENS
    "errorLens.messageTemplate": "($count) $message",
    "errorLens.delay": 5000,
    "errorLens.fontStyleItalic": true,
    "errorLens.enabledDiagnosticLevels": [
        "error",
        "warning",
    ],
    "errorLens.enabled": false,

    // PROJECT MANAGER
    "projectManager.git.baseFolders": [
        "~/Documents",
        "~/Work",
    ],
    "projectManager.git.maxDepthRecursion": 1,

    // COPILOT
    "github.copilot.editor.enableAutoCompletions": true,
    "github.copilot.enable": {
        "*": true,
        "yaml": true,
        "plaintext": true,
        "markdown": true,
    },
    // OTHER


}
